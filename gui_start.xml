<?xml version="1.0" encoding="utf-8"?>
<!--
 FATTYCURD MENU CONFIG
 
 Resolution can be either absolute or relative if absolute then if the user
 change resolution the objects will be missplaces! Relative positionning and
 size express in part of fullscreen resolution
 
 0.0, 0.0        0.0, 1.0
 screen
 1.0, 0.0        1.0, 1.0
 
 Don't forget in case you use relative positionning to also specify the size
 or it won't be correct!
 
 FAQ
 [Position] express the position of the CENTER of the object!
 [timeout] floating value in second
 [set-value] is a value that is send to the game engine
 [linked-to] this value is linked to a value in the game engine
 -->
<sub-menu
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="fattycurd-sub-menu.xsd">
	<still-state name="start" goto-state="kwakwa_logo" timeout="0.01">
        
		<!-- font size : small ]0, 600], medium ]600, 900], large ]900, +oo[ -->
		<!-- as long as you don't redifine this will stay there -->
        <!--
         <set-value linked-to="fattycurd.font.small" value="Fonts/Arial12.xml"/>
         <set-value linked-to="fattycurd.font.medium" value="Fonts/Arial20.xml"/>
         <set-value linked-to="fattycurd.font.large" value="Fonts/Arial36.xml"/>
         -->

        <set-value linked-to="fattycurd.font.small" value="Fonts/zekton12.xml"/>
        <set-value linked-to="fattycurd.font.medium" value="Fonts/zekton20.xml"/>
        <set-value linked-to="fattycurd.font.large" value="Fonts/zekton36.xml"/>
	</still-state>
</sub-menu>
